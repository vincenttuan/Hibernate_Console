<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- 一. book.orm -->
    <class name="book.orm.model.Book" table="book">
        <id column="b_id" name="id" type="int">
            <generator class="native"/>
        </id>
        <property column="b_name" name="name" type="string"/>
        <property column="b_price" name="price" type="int"/>
    </class>
    <class name="book.orm.model.Category" table="category">
        <id column="c_id" name="id" type="int">
            <generator class="native"/>
        </id>
        <property column="c_name" name="name" type="string"/>
    </class>
    <class name="book.orm.model.BookCategory" table="book_category">
        <id column="bc_id" name="id" type="int">
            <generator class="native"/>
        </id>
        <property column="c_id" name="c_id" type="int"/>
        <property column="b_id" name="b_id" type="int"/>
    </class>
    
    <!-- 二. stock.orm -->
    <class name="stock.orm.model.Fund" table="fund">
        <id name="fundId" type="java.lang.Integer">
            <column name="FUND_ID" />
            <generator class="native" />
        </id>
        <property name="name" type="string">
            <column name="NAME" length="10" not-null="true" />
        </property>
        <property name="desc" type="string">
            <column name="[DESC]" not-null="true" />
        </property>
        <!-- many-to-many -->
        <set name="stocks" table="stock_fund" 
             inverse="false" cascade="all" lazy="true" fetch="join">
            <key>
                <column name="FUND_ID" not-null="true" />
            </key>
            <many-to-many entity-name="stock.orm.model.Stock">
                <column name="STOCK_ID" not-null="true" />
            </many-to-many>
        </set>
        
    </class>
    
    <class name="stock.orm.model.Stock" table="stock">
        <id name="stockId" type="java.lang.Integer">
            <column name="STOCK_ID" />
            <generator class="native" />
        </id>
        <property name="stockCode" type="string">
            <column name="STOCK_CODE" length="10" not-null="true" unique="true" />
        </property>
        <property name="stockName" type="string">
            <column name="STOCK_NAME" length="20" not-null="true" unique="true" />
        </property>
        <!-- many-to-many -->
        <set name="funds" table="stock_fund" 
             inverse="true" cascade="all" lazy="true" fetch="join">
            <key>
                <column name="STOCK_ID" not-null="true" />
            </key>
            <many-to-many entity-name="stock.orm.model.Fund">
                <column name="FUND_ID" not-null="true" />
            </many-to-many>
        </set>
    </class>
    
    <!-- 三. room.orm Many-to-One -->
    <class name="room.orm.model.Room" table="room"> 
        <id name="id" column="id"> 
            <generator class="native"/> 
        </id> 
        <property name="address" column="address" />         
    </class> 
    
    <class name="room.orm.model.Tenant" table="tenant"> 
        <id name="id" column="id"> 
            <generator class="native"/> 
        </id> 
        <property name="name" column="name"/> 
        <many-to-one name="room" 
                     column="room_id"
                     class="room.orm.model.Room"
                     cascade="all"
                     outer-join="true"/>  
    </class>
    
</hibernate-mapping>
